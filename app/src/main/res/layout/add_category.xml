<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color_back"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <ImageButton
        android:background="#0000"
        android:id="@+id/cat_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"/>


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Kategoriya qo'shish"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="22sp"
        android:textFontWeight="500"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-black"/>


    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/add_item"
        android:layout_margin="20dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kategoriya qo`shish"
            android:textColor="@color/text_color"/>

        <EditText
            android:textSize="20sp"
            android:textColor="@color/name"
            android:id="@+id/edit_category_name"
            android:hint="Ism kiriting"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_back"
            android:padding="10dp"
            android:inputType="textAutoComplete"
            android:textColorHint="@color/text_color"/>
    </LinearLayout>

    <Button
        android:visibility="gone"

        android:id="@+id/add_category"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/active_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        android:text="Qo`shish"
        android:textAllCaps="false"
        android:textFontWeight="500"
        android:textColor="@color/name"
        android:fontFamily="sans-serif-black"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>

    <Button
        android:id="@+id/add_category_demo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/add_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        android:text="Qo`shish"
        android:textAllCaps="false"
        android:textFontWeight="500"
        android:textColor="@color/btn_color"
        android:fontFamily="sans-serif-black"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000"
        android:textSize="18sp"
        android:text="Bekor qilish"
        android:textAllCaps="false"
        android:textColor="@color/btn_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>