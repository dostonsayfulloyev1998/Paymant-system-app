<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:paddingTop="20dp"
       android:paddingBottom="20dp"
       android:layout_width="match_parent"
       android:paddingRight="20dp"
       android:paddingLeft="20dp"
       android:background="@drawable/circle_bottom"
       android:layout_height="match_parent">
       <TextView
           android:id="@+id/text"
           android:layout_marginTop="10dp"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Foydalanuvchi tahrirlash"
           android:textColor="@color/white"
           android:gravity="center"
           android:textSize="22sp"/>

       <EditText
           android:textColor="@color/white"
           android:textSize="20sp"
           android:inputType="textAutoComplete"
           android:paddingLeft="10dp"
           android:layout_marginTop="20dp"
           android:padding="10dp"
           android:background="@drawable/edit_back"
           app:layout_constraintTop_toBottomOf="@id/text"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/bottom_user_name"/>

 <EditText
           android:textColor="@color/white"
           android:textSize="20sp"
           android:inputType="number"
           android:paddingLeft="10dp"
           android:layout_marginTop="20dp"
           android:padding="10dp"
           android:background="@drawable/edit_back"
           app:layout_constraintTop_toBottomOf="@id/bottom_user_name"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/bottom_user_summa"/>

       <Button
           android:layout_marginBottom="20dp"
           android:id="@+id/bottom_user_btn"
           android:padding="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@id/bottom_user_summa"
           app:layout_constraintLeft_toLeftOf="@id/text"
           app:layout_constraintRight_toRightOf="@id/text"
           android:background="@drawable/active_btn"
           android:text="O'zgartirish"
           android:textSize="18sp"
           android:textColor="@color/white"
           android:textAllCaps="false"
           android:layout_marginTop="15dp"/>
   </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>